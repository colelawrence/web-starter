{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "./src",
    "outDir": "./out",
    "lib": ["dom", "es6"],
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "jsx": "react",
    "paths": {
      "@helpers": ["./helpers.ts"],
      "@monaco": ["../node_modules/monaco-editor/esm/vs/editor/editor.api"]
    }
  },
  "include": [
    "./src/*.tsx",
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "../backend/index.d.ts"
  ]
}
